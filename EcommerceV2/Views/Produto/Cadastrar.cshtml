@{
    
}

@model Produto

<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastrar Produto</legend>
        <div asp-validation-summary="ModelOnly" class="text-primary"></div>

        <div class="form-group">
            <label asp-for="Nome"></label>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Nome" />
            <span asp-validation-for="Nome"
                class="text-primary"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao"></label>
            <input type="text" class="form-control" asp-for="Descricao" placeholder="Descrição" />
            <span asp-validation-for="Descricao"
                  class="text-primary"></span>
        </div>
        <div class="form-group">
            <label asp-for="preco"></label>
            <input type="text" class="form-control" asp-for="preco" placeholder="Preço" />
            <span asp-validation-for="preco"
                  class="text-primary"></span>
        </div>
        <div class="form-group">
            <label asp-for="Qtd"></label>
            <input type="text" class="form-control" asp-for="Qtd" placeholder="Quantidade" />
            <span asp-validation-for="Qtd"
                  class="text-primary"></span>
        </div>

        <div class="form-group" id="Categorias">
            <label>Categorias</label>
            <select asp-items="@ViewBag.Categorias" class="form-control" name="drpCategorias">
                <option> -- SELECIONE -- </option>
            </select>

        </div>

        <button type="submit" class="btn btn-info">Cadastrar</button>
    </fieldset>
</form>