@{
    
}

@model Produto

<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastrar Produto</legend>

        <div class="form-group">
            <label>Nome:</label>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Nome" />
        </div>
        <div class="form-group">
            <label>Descrição:</label>
            <input type="text" class="form-control" asp-for="Descricao" placeholder="Descrição" />
        </div>
        <div class="form-group">
            <label>Preço:</label>
            <input type="text" class="form-control" asp-for="preco" placeholder="Preço" />
        </div>
        <div class="form-group">
            <label>Quantidade:</label>
            <input type="text" class="form-control" asp-for="Qtd" placeholder="Quantidade" />
        </div>
        <button type="submit" class="btn btn-info">Cadastrar</button>
    </fieldset>
</form>