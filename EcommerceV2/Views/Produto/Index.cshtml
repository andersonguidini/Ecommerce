@{
    DateTime dataHora = ViewBag.DataHora;
}

@model List<Produto>


<h2>Gerenciamento dos Produtos</h2>
<a asp-action="Cadastrar" class="btn btn-success">Cadastrar Produto</a>

<table class="table table-hover" style="margin-top:15px;margin-bottom:15px">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Criado em</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Produto item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.preco.Value.ToString("C2")</td>
                <td>@item.Qtd</td>
                <td>@item.CriadoEm</td>
                <td>
                    <a class="btn btn-primary" asp-action="Remover" asp-route-id="@item.Id">Remover</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<b>Dados atualizado:</b> @dataHora
